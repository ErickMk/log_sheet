{
  "version": 2,
  "installCommand": "pip install -r requirements.txt --break-system-packages && pnpm install --prefix logsheet",
  "buildCommand": "pnpm run build --prefix logsheet",
  "builds": [
    {
      "src": "logsheet/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 60,
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/wsgi.py"
    },
    {
      "src": "/pdf.worker.min.js",
      "dest": "/logsheet/pdf.worker.min.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/logsheet/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/logsheet/index.html"
    }
  ]
}
